<UserControl x:Class="ExcellCore.Module.Extensions.Sync.Views.SyncWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="OnLoaded">
  <Border Padding="24"
      BorderBrush="#FFDDDDDD"
      BorderThickness="1">
    <StackPanel>
      <TextBlock Text="{Binding Title}"
          FontSize="20"
          FontWeight="SemiBold"/>
      <TextBlock Text="{Binding Subtitle}"
          Margin="0,8,0,16"
          Foreground="Gray"/>
      <TextBlock Text="Connector configuration, sync telemetry, and job orchestration dashboards will surface in this extension."
          TextWrapping="Wrap"/>

      <TextBlock Text="Triage Queue"
                 FontWeight="SemiBold"
                 Margin="0,16,0,4"/>
      <ItemsControl ItemsSource="{Binding TriageItems}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <StackPanel/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Padding="12"
                    Margin="0,0,0,8"
                    BorderBrush="#FFDDDDDD"
                    BorderThickness="1">
              <StackPanel>
                <StackPanel Orientation="Horizontal">
                  <TextBlock Text="{Binding AggregateType}"
                      FontWeight="SemiBold"/>
                  <TextBlock Text="{Binding ObservedDisplay}"
                      Margin="8,0,0,0"
                      Foreground="Gray"/>
                  <TextBlock Text="{Binding RiskLevel}"
                      Margin="8,0,0,0"
                      Foreground="#B45309"/>
                </StackPanel>
                <TextBlock Text="{Binding Reason}"
                    Margin="0,4,0,0"
                    TextWrapping="Wrap"/>
                <TextBlock Text="{Binding ChangeSummary}"
                    Margin="0,2,0,0"
                    Foreground="#4B5563"/>
              </StackPanel>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </StackPanel>
  </Border>
</UserControl>
