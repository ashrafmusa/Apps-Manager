<UserControl x:Class="ExcellCore.Module.IS.Retail.Views.RetailWorkspaceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="OnLoaded">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{Binding Title}"
                 FontSize="20"
                 FontWeight="SemiBold"/>
      <TextBlock Text="{Binding Subtitle}"
                 Margin="12,0,0,0"
                 Foreground="Gray"
                 VerticalAlignment="Bottom"/>
    </StackPanel>

    <UniformGrid Grid.Row="1"
                 Columns="4"
                 Margin="0,16,0,16">
      <Border Style="{StaticResource ModuleSummaryCardNeutralStyle}">
        <StackPanel>
          <TextBlock Text="Daily Sales"
                     Style="{StaticResource ModuleSummaryLabelStyle}"/>
          <TextBlock Text="{Binding Summary.DailySales, StringFormat={}{0:C0}}"
                     Style="{StaticResource ModuleSummaryValueStyle}"/>
        </StackPanel>
      </Border>
      <Border Style="{StaticResource ModuleSummaryCardWarningStyle}">
        <StackPanel>
          <TextBlock Text="Open Orders"
                     Style="{StaticResource ModuleSummaryLabelWarningStyle}"/>
          <TextBlock Text="{Binding Summary.OpenOrders}"
                     Style="{StaticResource ModuleSummaryValueStyle}"/>
        </StackPanel>
      </Border>
      <Border Style="{StaticResource ModuleSummaryCardSuccessStyle}"
              Margin="0">
        <StackPanel>
          <TextBlock Text="Suspended Carts"
                     Style="{StaticResource ModuleSummaryLabelSuccessStyle}"/>
          <TextBlock Text="{Binding Summary.SuspendedCount}"
                     Style="{StaticResource ModuleSummaryValueStyle}"/>
        </StackPanel>
      </Border>
      <Border Style="{StaticResource ModuleSummaryCardNeutralStyle}"
              Margin="0">
        <StackPanel>
          <TextBlock Text="Returns Today"
                     Style="{StaticResource ModuleSummaryLabelStyle}"/>
          <TextBlock Text="{Binding Summary.ReturnsToday}"
                     Style="{StaticResource ModuleSummaryValueStyle}"/>
        </StackPanel>
      </Border>
    </UniformGrid>

    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                Margin="0,0,0,12">
      <Button Content="Refresh"
              Width="100"
              Margin="0,0,8,0"
              Command="{Binding RefreshCommand}"/>
      <Button Content="Suspend Demo Cart"
              Width="160"
              Margin="0,0,8,0"
              Command="{Binding SuspendCartCommand}"/>
      <Button Content="Resume Oldest Suspended"
              Width="200"
              Margin="0,0,8,0"
              Command="{Binding ResumeCartCommand}"/>
      <Button Content="Record Return"
              Width="140"
              Command="{Binding RecordReturnCommand}"/>
    </StackPanel>

    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2.5*"/>
        <ColumnDefinition Width="1.25*"/>
        <ColumnDefinition Width="1.25*"/>
      </Grid.ColumnDefinitions>

      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Recent Tickets"
                   FontWeight="SemiBold"
                   FontSize="14"/>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Tickets}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  BorderBrush="#FFDDDDDD"
                  BorderThickness="1"
                  Margin="0,8,0,8">
          <DataGrid.Columns>
            <DataGridTextColumn Header="Ticket"
                                Binding="{Binding TicketNumber}"
                                Width="120"/>
            <DataGridTextColumn Header="Channel"
                                Binding="{Binding Channel}"
                                Width="120"/>
            <DataGridTextColumn Header="Total"
                                Binding="{Binding TotalDisplay}"
                                Width="100"/>
            <DataGridTextColumn Header="Status"
                                Binding="{Binding Status}"
                                Width="140"/>
            <DataGridTextColumn Header="Raised"
                                Binding="{Binding RaisedDisplay}"
                                Width="110"/>
          </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2"
                   Text="{Binding StatusMessage}"
                   Foreground="Gray"/>
      </Grid>

      <Border Grid.Column="1"
              BorderBrush="#FFDDDDDD"
              BorderThickness="1"
              Padding="16"
              Margin="12,0,12,0">
        <StackPanel>
          <TextBlock Text="Suspended Carts"
                     FontWeight="SemiBold"
                     FontSize="14"/>
          <ItemsControl ItemsSource="{Binding SuspendedTickets}"
                        Margin="0,8,0,0">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Margin="0,4,0,4"
                        Padding="12"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        Background="#FFF9F9F9">
                  <StackPanel>
                    <TextBlock Text="{Binding TicketNumber}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Channel}"
                               Foreground="Gray"/>
                    <TextBlock Text="{Binding SubtotalDisplay}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Status}"
                               Foreground="#FF0B7A75"/>
                    <TextBlock Text="{Binding SuspendedDisplay, StringFormat=Suspended {0}}"
                               Foreground="Gray"/>
                    <TextBlock Text="{Binding ResumedDisplay, StringFormat=Resumed {0}}"
                               Foreground="Gray"/>
                  </StackPanel>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </StackPanel>
      </Border>

      <Border Grid.Column="2"
              BorderBrush="#FFDDDDDD"
              BorderThickness="1"
              Padding="16">
        <StackPanel>
          <TextBlock Text="Returns &amp; Promotions"
                     FontWeight="SemiBold"
                     FontSize="14"/>
          <ItemsControl ItemsSource="{Binding Returns}"
                        Margin="0,8,0,8">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Margin="0,4,0,4"
                        Padding="12"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        Background="#FFF9F9F9">
                  <StackPanel>
                    <TextBlock Text="{Binding TicketNumber}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Channel}"
                               Foreground="Gray"/>
                    <TextBlock Text="{Binding AmountDisplay}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Status}"
                               Foreground="#FF0B7A75"/>
                    <TextBlock Text="{Binding Reason}"
                               Foreground="Gray"/>
                    <TextBlock Text="{Binding ReturnedDisplay, StringFormat=Returned {0}}"
                               Foreground="Gray"/>
                  </StackPanel>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>

          <Separator Margin="0,8,0,8"/>

          <TextBlock Text="Active Promotions"
                     FontWeight="SemiBold"
                     FontSize="14"/>
          <ItemsControl ItemsSource="{Binding Promotions}"
                        Margin="0,8,0,0">
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Margin="0,4,0,4"
                        Padding="12"
                        BorderBrush="#FFE0E0E0"
                        BorderThickness="1"
                        Background="#FFF9F9F9">
                  <StackPanel>
                    <TextBlock Text="{Binding Name}"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Description}"
                               TextWrapping="Wrap"
                               Foreground="Gray"/>
                    <TextBlock Text="{Binding EndsDisplay, StringFormat=Ends {0}}"
                               Foreground="#FF0B7A75"
                               Margin="0,4,0,0"/>
                  </StackPanel>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </StackPanel>
      </Border>
    </Grid>
  </Grid>
</UserControl>
