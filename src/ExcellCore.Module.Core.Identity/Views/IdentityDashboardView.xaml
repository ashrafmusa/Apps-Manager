<UserControl x:Class="ExcellCore.Module.Core.Identity.Views.IdentityDashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Loaded="OnLoaded">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
      <TextBlock Text="Master Identity Registry" FontSize="18" FontWeight="SemiBold" />
      <TextBlock Text="(Core Module)" FontSize="14" Foreground="Gray" VerticalAlignment="Bottom" Margin="8,0,0,0" />
    </StackPanel>

    <Grid Grid.Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="0,0,12,0">
        <TextBox Width="220"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 Margin="0,0,8,0" />
        <Button Content="Search" Width="80" Command="{Binding SearchCommand}" />
        <Button Content="New" Width="60" Margin="8,0,0,0" Command="{Binding NewCommand}" />
        <Button Content="Save" Width="80" Margin="8,0,0,0" Command="{Binding SaveCommand}" />
        <Button Content="Reload" Width="80" Margin="8,0,0,0" Command="{Binding RefreshDetailCommand}" />
      </StackPanel>

      <StackPanel Grid.Column="1" HorizontalAlignment="Right">
        <TextBlock Text="{Binding StatusMessage}" Foreground="Gray" HorizontalAlignment="Right" />
        <TextBlock Text="{Binding Notification}" Foreground="#FF0B7A75" FontWeight="SemiBold" HorizontalAlignment="Right" />
      </StackPanel>
    </Grid>

    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="2*" />
        <ColumnDefinition Width="40" />
        <ColumnDefinition Width="3*" />
      </Grid.ColumnDefinitions>

      <DataGrid Grid.Column="0"
                ItemsSource="{Binding Parties}"
                SelectedItem="{Binding SelectedParty, Mode=TwoWay}"
                AutoGenerateColumns="False"
                HeadersVisibility="Column"
                CanUserAddRows="False"
                CanUserDeleteRows="False"
                IsReadOnly="True"
                BorderBrush="#FFDDDDDD"
                BorderThickness="1">
        <DataGrid.Columns>
          <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="*" />
          <DataGridTextColumn Header="Type" Binding="{Binding PartyType}" Width="160" />
          <DataGridTextColumn Header="Identifier" Binding="{Binding PrimaryIdentifier}" Width="160" />
          <DataGridTextColumn Header="Date of Birth" Binding="{Binding DateOfBirth, StringFormat=d}" Width="140" />
        </DataGrid.Columns>
      </DataGrid>

      <Border Grid.Column="2" BorderBrush="#FFDDDDDD" BorderThickness="1" Padding="16">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
          </Grid.RowDefinitions>

          <TextBlock Text="Identity Details" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />

          <StackPanel Grid.Row="1" Margin="0,0,0,8">
            <TextBlock Text="Display Name" />
            <TextBox Text="{Binding Form.DisplayName, UpdateSourceTrigger=PropertyChanged}" />
          </StackPanel>

          <StackPanel Grid.Row="2" Margin="0,0,0,8">
            <TextBlock Text="Type" />
            <ComboBox ItemsSource="{Binding PartyTypes}"
                      SelectedItem="{Binding Form.PartyType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
          </StackPanel>

          <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <TextBlock Text="National ID" />
            <TextBox Text="{Binding Form.NationalId, UpdateSourceTrigger=PropertyChanged}" />
          </StackPanel>

          <StackPanel Grid.Row="4" Margin="0,0,0,12">
            <TextBlock Text="Date of Birth" />
            <DatePicker SelectedDate="{Binding Form.DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
          </StackPanel>

          <StackPanel Grid.Row="5">
            <TextBlock Text="Identifiers" />
            <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
              <Button Content="Add" Width="60" Command="{Binding AddIdentifierCommand}" />
              <Button Content="Remove" Width="80" Margin="8,0,0,0" Command="{Binding RemoveIdentifierCommand}" />
            </StackPanel>
            <DataGrid ItemsSource="{Binding Identifiers}"
                      SelectedItem="{Binding SelectedIdentifier, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      BorderBrush="#FFDDDDDD"
                      BorderThickness="1"
                      IsReadOnly="False"
                      Height="180">
              <DataGrid.Columns>
                <DataGridTextColumn Header="Scheme" Binding="{Binding Scheme, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
              </DataGrid.Columns>
            </DataGrid>
          </StackPanel>
        </Grid>
      </Border>
    </Grid>
  </Grid>
</UserControl>
